# Telegram Bot Token (получить у @BotFather)
TELEGRAM_BOT_TOKEN=your_bot_token_here

# Telegram Stars provider token
TELEGRAM_PROVIDER_TOKEN=STARS

# URL для вебхуков Telegram
TELEGRAM_WEBHOOK_URL=https://your-domain.com/api/payment-webhook

# URL для вебхука бота админки (опционально)
TELEGRAM_BOT_WEBHOOK_URL=https://your-domain.com/api/bot/webhook

# Порт сервера
PORT=3001

# Секретный ключ для сессий
SESSION_SECRET=your_secret_key_here

# URL клиента (для CORS)
CLIENT_URL=https://your-domain.com

# Telegram ID администратора (ваш ID)
# Узнать можно у @userinfobot
ADMIN_TELEGRAM_ID=your_telegram_id

# URL Web App для админки
WEB_APP_URL=https://your-domain.com
